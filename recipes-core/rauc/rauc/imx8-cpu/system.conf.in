# rauc system configuration

[system]
compatible=@RAUC_BUNDLE_COMPATIBLE@
bootloader=barebox
mountprefix=/run/rauc
data-directory=@RAUC_DATA_DIR@
statusfile=@RAUC_DATA_DIR@/system.raucs

[keyring]
path=@RAUC_KEYRING_FILE@

[slot.bootloader.0]
device=/dev/mmcblk2
type=boot-emmc

[slot.rootfs.0]
device=/dev/mmcblk2p3
type=ext4
bootname=system0
resize=true

[slot.rootfs.1]
device=/dev/mmcblk2p4
type=ext4
bootname=system1
resize=true

[slot.failsafe-fit.0]
device=/dev/mmcblk2p7
type=raw
parent=failsafe.0

[slot.failsafe.0]
device=/dev/mmcblk2p8
type=raw

[slot.recovery.0]
device=/dev/mmcblk1p2
type=ext4
readonly=true

[handlers]
pre-install=@RAUC_HANDLER_PRE_INSTALL@
post-install=@RAUC_HANDLER_POST_INSTALL@
system-info=@RAUC_HANDLER_SYSTEM_INFO@