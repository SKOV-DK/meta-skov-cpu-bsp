Subject: [PATCH 604/605] skovarm9cpu: updated display timing parameters

Signed-off-by: Sam Ravnborg <sam@ravnborg.org>
---
 arch/arm/dts/skovarm9cpu.dts | 32 +++++++++++++++++++++-----------
 1 file changed, 21 insertions(+), 11 deletions(-)

diff --git a/arch/arm/dts/skovarm9cpu.dts b/arch/arm/dts/skovarm9cpu.dts
index 2055c68df..7dacbf1c2 100644
--- a/arch/arm/dts/skovarm9cpu.dts
+++ b/arch/arm/dts/skovarm9cpu.dts
@@ -190,14 +190,24 @@
 				display-timings {
 					native-mode = <&l2rt>;
 					l2rt: l2rt {
-						clock-frequency = <33000000>;
+						/* LTTD800480070-L2RT @ 55 */
+						clock-frequency = <30000000>;
 						hactive = <800>;
 						vactive = <480>;
+						/* Atmel calculation
+						 * Horizontal = 
+						 * Hsync + left marging + picture + right_margin + 1
+						 * (3+85+800+0+1=889)
+						 */
 						hback-porch = <85>;
-						hfront-porch = <112>;
-						vback-porch = <29>;
-						vfront-porch = <38>;
+						hfront-porch = <1>;
 						hsync-len = <3>;
+						 /* Vertical =
+						 * upper marging + picture + lower_margin
+						 * (32+480+1=513) (25MHz / ( 889 * 513 ) = 54,8Hz
+						 */
+						vback-porch = <32>;
+						vfront-porch = <1>;
 						vsync-len = <3>;
 						pixelclk-active = <1>;
 						hsync-active = <0>;
@@ -219,17 +229,17 @@
 						vsync-active = <0>;
 						de-active = <1>;
 					};
-					/* TODO - not updated */
 					seiko: seiko {
+						/* 70WVW2AZ0 @ 55 */
 						clock-frequency = <33000000>;
 						hactive = <800>;
 						vactive = <480>;
-						hback-porch = <43>;
-						hfront-porch = <154>;
-						vback-porch = <20>;
-						vfront-porch = <47>;
-						hsync-len = <3>;
-						vsync-len = <3>;
+						hback-porch = <0>;
+						hfront-porch = <256>;
+						vback-porch = <45>;
+						vfront-porch = <0>;
+						hsync-len = <0>;
+						vsync-len = <0>;
 						pixelclk-active = <1>;
 						hsync-active = <0>;
 						vsync-active = <0>;
