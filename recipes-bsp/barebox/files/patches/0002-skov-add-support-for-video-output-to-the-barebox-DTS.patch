index 0362379bb88a..c86473297853 100644
--- a/arch/arm/boards/skov-imx6/board.c
+++ b/arch/arm/boards/skov-imx6/board.c
@@ -16,6 +16,8 @@
 #include <common.h>
 #include <init.h>
 #include <mach/bbu.h>
+#include <environment.h>
+#include <i2c/i2c.h>
 
 static int skov_imx6_devices_init(void)
 {
@@ -28,3 +30,22 @@ static int skov_imx6_devices_init(void)
 	return 0;
 }
 coredevice_initcall(skov_imx6_devices_init);
+
+static void skov_imx6_devices_shutdown(void)
+{
+	const char *external;
+
+	if (!of_machine_is_compatible("skov,imx6"))
+		return;
+
+	external = getenv("state.display.external");
+	if (!external) {
+		pr_err("could not get state variable display.external\n");
+		return;
+	}
+
+	if (!strcmp(external, "0")) {
+		setenv("backlight0.brightness", "0");
+	}
+}
+predevshutdown_exitcall(skov_imx6_devices_shutdown);
