From e411b479f65dc7d563be428aa0d24f55126c4473 Mon Sep 17 00:00:00 2001
From: Sam Ravnborg <srn@skov.dk>
Date: Fri, 17 Feb 2017 21:19:28 +0100
Subject: [PATCH] arm9-cpu: nicer info text during boot (no NAND info, right
 adjusted)

---
 board/skov/arm9-cpu/arm9-cpu.c | 17 +++++------------
 1 file changed, 5 insertions(+), 12 deletions(-)

diff --git a/board/skov/arm9-cpu/arm9-cpu.c b/board/skov/arm9-cpu/arm9-cpu.c
index 851cdf6..b61457d 100644
--- a/board/skov/arm9-cpu/arm9-cpu.c
+++ b/board/skov/arm9-cpu/arm9-cpu.c
@@ -407,29 +407,22 @@ void lcd_show_board_info(void)
 	int i;
 	char temp[32];
 
-	lcd_printf ("%s\n", U_BOOT_VERSION);
-	lcd_printf ("ARM9 CPU\n");
-	lcd_printf ("%s CPU at %s MHz\n",
+	lcd_printf ("\t%s\n", U_BOOT_VERSION);
+	lcd_printf ("\tARM9 CPU\n");
+	lcd_printf ("\t%s CPU at %s MHz\n",
 		ATMEL_CPU_NAME,
 		strmhz(temp, get_cpu_clk_rate()));
 
 	dram_size = 0;
 	for (i = 0; i < CONFIG_NR_DRAM_BANKS; i++)
 		dram_size += gd->bd->bi_dram[i].size;
-	nand_size = 0;
+	lcd_printf ("\t%ld MB SDRAM\n", dram_size >> 20);
 #ifndef CONFIG_SYS_NO_FLASH
 	flash_size = 0;
 	for (i = 0; i < CONFIG_SYS_MAX_FLASH_BANKS; i++)
 		flash_size += flash_info[i].size;
+	lcd_printf ("\t%ld MB NOR\n", flash_size >> 20);
 #endif
-	lcd_printf ("  %ld MB SDRAM, %ld MB NAND",
-		dram_size >> 20,
-		nand_size >> 20 );
-#ifndef CONFIG_SYS_NO_FLASH
-	lcd_printf (",\n  %ld MB NOR",
-		flash_size >> 20);
-#endif
-	lcd_puts ("\n");
 }
 #endif /* CONFIG_LCD_INFO */
 #endif
