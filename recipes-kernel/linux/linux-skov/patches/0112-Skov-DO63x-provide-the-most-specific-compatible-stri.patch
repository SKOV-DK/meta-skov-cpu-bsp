 arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts  | 2 +-
 arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts  | 2 +-
 6 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/arch/arm/boot/dts/imx6dl-skov-dol63x-revA.dts b/arch/arm/boot/dts/imx6dl-skov-dol63x-revA.dts
index a94e68d6fab9..16b753bd12a7 100644
--- a/arch/arm/boot/dts/imx6dl-skov-dol63x-revA.dts
+++ b/arch/arm/boot/dts/imx6dl-skov-dol63x-revA.dts
@@ -19,5 +19,5 @@
 
 / {
 	model = "Freescale i.MX6 SKOV Solo Board";
-	compatible = "fsl,imx6dl", "fsl,imx6dl_cpu";
+	compatible = "skov,dol63x-imxdl-revA", "skov,dol63x", "fsl,imx6dl";
 };
