+		.disable = 84, /* 6.4. - Power off: 5 Vsyncs */
+		.unprepare = 50, /* 6.4. - Power off: 3 Vsyncs */
+	},
+	.bus_format = MEDIA_BUS_FMT_RGB888_1X7X4_SPWG, /* 6.6 Data input format */
+	.connector_type = DRM_MODE_CONNECTOR_LVDS, /* 3. General Specification */
+	.bus_flags = DRM_BUS_FLAG_DE_HIGH,  /* 6.7 Input Clock and data timing diagram */
+};
