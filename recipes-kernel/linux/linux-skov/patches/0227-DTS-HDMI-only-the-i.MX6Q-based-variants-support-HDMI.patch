From: Juergen Borleis <jbe@pengutronix.de>
Date: Thu, 26 Nov 2015 17:07:07 +0100
Subject: [PATCH] DTS/HDMI: only the i.MX6Q based variants support HDMI

Signed-off-by: Juergen Borleis <jbe@pengutronix.de>
---
 arch/arm/boot/dts/imx6q-skov-dol63x-revA.dts | 5 -----
 arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts | 4 ++++
 arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts | 4 ++++
 arch/arm/boot/dts/imx6qdl-cpu.dtsi           | 1 -
 4 files changed, 8 insertions(+), 6 deletions(-)

diff --git a/arch/arm/boot/dts/imx6q-skov-dol63x-revA.dts b/arch/arm/boot/dts/imx6q-skov-dol63x-revA.dts
index 7c11304bf1d8..e610efa660cb 100644
--- a/arch/arm/boot/dts/imx6q-skov-dol63x-revA.dts
+++ b/arch/arm/boot/dts/imx6q-skov-dol63x-revA.dts
@@ -25,8 +25,3 @@
 &sata {
 	status = "disabled";
 };
-
-&hdmi {
-	status = "okay";
-	ddc-i2c-bus = <&i2c2>;
-};
diff --git a/arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts b/arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts
index f9be4f7d83aa..0732a9ae860a 100644
--- a/arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts
+++ b/arch/arm/boot/dts/imx6q-skov-dol63x-revB.dts
@@ -26,6 +26,10 @@
 	status = "disabled";
 };
 
+&i2c2 {
+	status = "okay";
+};
+
 &hdmi {
 	status = "okay";
 	ddc-i2c-bus = <&i2c2>;
diff --git a/arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts b/arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts
index 629147555512..9c8d0bbef55b 100644
--- a/arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts
+++ b/arch/arm/boot/dts/imx6q-skov-dol63x-revC.dts
@@ -26,6 +26,10 @@
 	status = "disabled";
 };
 
+&i2c2 {
+	status = "okay";
+};
+
 &hdmi {
 	status = "okay";
 	ddc-i2c-bus = <&i2c2>;
diff --git a/arch/arm/boot/dts/imx6qdl-cpu.dtsi b/arch/arm/boot/dts/imx6qdl-cpu.dtsi
index 40c000dfc7bf..ae0abbc486f6 100644
--- a/arch/arm/boot/dts/imx6qdl-cpu.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-cpu.dtsi
@@ -310,7 +310,6 @@
 };
 
 &i2c2 {
-	status = "okay";
 	clock-frequency = <100000>;
 	pinctrl-names = "default";
         pinctrl-0 = <&pinctrl_i2c2_2>;
